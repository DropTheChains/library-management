<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chains.library.mapper.UserMapper">
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into user(name,username,age,sex,phone,address,cardid)
        values(#{ name },#{username},#{age},#{sex},#{phone},#{address},#{cardid})
    </insert>

    <update id="update">
        update user set
        name = #{name},username = #{username},age = #{age},sex = #{sex},phone =#{phone} ,address =#{address}
        where id = #{id}
    </update>

    <select id="list" resultType="com.chains.library.entity.User">
        select * from user
    </select>

    <select id="listByCondition" resultType="com.chains.library.entity.User">
        select * from user
        <where>
            <if test="name != null and name !='' ">
                name like concat( '%', #{ name }, '%')
            </if>

            <if test="phone != null and phone !='' ">
                and phone like concat( '%',#{ phone },'%')
            </if>
        </where>
        order by id desc
    </select>
    <select id="getById" resultType="com.chains.library.entity.User">
        select * from user where id = #{id}
    </select>

</mapper>